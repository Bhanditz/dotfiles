colorscheme indigo

set titlestring=Firefox
set nofullscreen

set toolbars=all,noaddons,nobookmarks,nomenu,nonavigation
set status=input,location,bookmark,history,tabcount,position,ssl

set editor="st -e /usr/bin/vim -f"

set incsearch
set smartcase
set hlsearch
set autocomplete
command print hardcopy
command about dialog about
command printpreview dialog printpreview
command aboutconfig tabopen about:config
